<title>BLOG_SatoruTanaka</title>
</head>
<body>
<header>
    <%- include('includes/common/header.ejs', {page: 'top'}) %>
</header>
<section id="top">
    <article>
        <ul class="top-article">
            <%
            data.forEach(function (noteData) {
                var upDate = new Date(Number(noteData.update)).toDateString();
            %>
            <li>
                <a href="viewData/<%= noteData.update %>" target="_blank">
                    <dl class="contents-item">
                        <div class="icon-list">
                            <i class="fa fa-globe" aria-hidden="true"></i>
                            <i class="fa fa-cutlery" aria-hidden="true"></i>
                        </div>
                        <dt>
                            <h2><%= noteData.noteTitle %></h2>
                        </dt>
                        <dd>
                            <div><%- noteData.noteText%></div>
                        </dd>
                        <div class="pubDate"><i class="fa fa-upload" aria-hidden="true"></i>  <%- upDate %></div>
                    </dl>
                </a>
            </li>
            <%
            });
            %>
        </ul>
    </article>
    <div class="dummy_article"></div>
    <aside>
        <div><%- include('includes/common/aside.ejs')%></div>
    </aside>
</section>
<footer>
    <% include includes/common/footer.ejs %>
</footer>
<script type="text/javascript" src="js/top.js"></script>
</body>
</html>
